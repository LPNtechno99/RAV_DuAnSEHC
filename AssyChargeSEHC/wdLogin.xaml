<Window x:Class="AssyChargeSEHC.wdLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssyChargeSEHC"
        mc:Ignorable="d"
        Title="wdLogin" Height="280" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="10" Orientation="Vertical">
        <Label Content="Role:" FontSize="20" FontWeight="Bold"/>
        <TextBox Height="35" Margin="0 5 0 0" FontSize="20" FontWeight="Bold"
                 TextAlignment="Right" Name="txtRole"/>
        <Label Margin="0 5 0 0" Content="Password:" FontSize="20" FontWeight="Bold"/>
        <PasswordBox Height="35" Margin="0 5 0 0" FontSize="20" FontWeight="Bold" 
                     Name="pbPassword" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"
                     PasswordChar="*" MaxLength="6" KeyUp="pbPassword_KeyUp"/>

        <Button x:Name="btLogin" Content="Login" FontSize="20" FontWeight="Bold"
                 Click="btLogin_Click" Margin="0 20 0 0" VerticalContentAlignment="Center"/>
    </StackPanel>
</Window>
